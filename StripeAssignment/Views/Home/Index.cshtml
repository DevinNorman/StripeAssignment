@{
  ViewData["Title"] = "Home Page";
}
@model StripeAssignment.Models.StripeSettings

@section Scripts {

}

<script type="text/javascript">
    // Create a Stripe client.
    window.stripeToken = '@Model.PublishableKey';
</script>
<form action="/home/charge" method="post" id="payment-form">
  <label id="amount-label">
    Amount
  </label>
  <input id="charge-amount" name="amount" type="number" />
  <div class="form-row">
    <label id="credit-card-label" for="card-element">
      Credit or debit card
    </label>
    <div id="card-element">
      <!-- A Stripe Element will be inserted here. -->
    </div>

    <!-- Used to display form errors. -->
    <div id="card-errors" role="alert"></div>
  </div>

  <button id="submitPayment">Submit Payment</button>
</form>